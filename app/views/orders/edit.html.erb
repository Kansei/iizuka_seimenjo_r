<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>

<div class="order-form">
  <%= form_with model: @order, html: {class: "form-horizontal"}, local: true do |form| %>

    <p>注文番号：<%= @order.number %></p>
    <% @details.each do |detail| %>

      <%= form.hidden_field "details[][detail_id]", value: detail.id %>

      <div class="form-group">
        <%= form.label detail.menu.name, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= form.number_field "details[][quantity]",value: detail.quantity, class: "form-control" %>
        </div>
      </div>
    <% end %>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= form.submit "更新", class: "btn btn-primary" %>

        <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#deleteOrderModal">
          取り消し
        </button>
      </div>
    </div>


    <div class="modal fade" id="deleteOrderModal" tabindex="-1" role="dialog" aria-labelledby="modal" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="demoModalTitle">本当にこの注文を取り消しますか？</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">キャンセル</button>
            <%= link_to "取り消し", order_path(@order.id), method: :delete, class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>

  <% end %>
</div>
