<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>

<div class="order-form">
  <%= form_with url: confirm_orders_path, html: {class: "form-horizontal"}, local: true do |form| %>
    <% @menus.each do |menu| %>
      <p><%= menu.name %></p>
      <p><%= menu.price %>円</p>

      <%= form.hidden_field "order[][menu_id]",value: menu.id %>

      <div class="form-group">
        <%= form.label "個数", class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= form.number_field "order[][quantity]", id: :menu_price, class: "form-control" %>
        </div>
      </div>

      <hr>
    <% end %>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= form.submit "確認", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
