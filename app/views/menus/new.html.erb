<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>

<div class="menu-form">
  <%= form_for @menu, html: {class: "form-horizontal"} do |form| %>
    <div class="form-group">
      <%= form.label "商品名", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :name, id: :menu_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label "値段(円)", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.number_field :price, id: :menu_price, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label "このメニューを注文一覧に表示しますか？", class: "col-sm-6 control-label" %>
      <div class="col-sm-10">
        <%= form.select :visible, [['はい', true],['いいえ', false]], id: :menu_visible, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= form.submit "メニューを追加", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
