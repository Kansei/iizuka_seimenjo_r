<div class="menu-form">
  <% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>"><%= message %></div>
  <% end %>

  <%= form_for @menu, html: {class: "form-horizontal"} do |form| %>

    <div class="form-group">
      <%= form.label "商品名", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :name, id: :menu_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label "値段(円)", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <div class="form-row">
          <%= form.number_field :price, id: :menu_price, class: "form-control col-sm-6" %>
          <div class="decrease price-btn btn btn-secondary col-sm-1">ー</div>
          <div class="increase price-btn btn btn-secondary col-sm-1">＋</div>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= form.label "このメニューを注文一覧に表示しますか？", class: "col-sm-6 control-label" %>
      <div class="col-sm-10">
        <%= form.select :visible, [['はい', true], ['いいえ', false]], {}, id: :menu_visible, class: "form-control custom-select" %>
      </div>
    </div>

    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit "メニューを更新", class: "btn btn-primary col-sm-5" %>
    <button type="button" class="btn btn-outline-danger col-offset-sm-3 col-sm-3" data-toggle="modal" data-target="#deleteMenuModal">
      メニューを削除
    </button>
    </div>

    <!-- モーダルダイアログ -->
    <div class="modal fade" id="deleteMenuModal" tabindex="-1" role="dialog" aria-labelledby="modal" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="demoModalTitle">本当にこのメニューを削除しますか？</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">キャンセル</button>
            <%= link_to "削除", menu_path(@menu.id), method: :delete, class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>

  <% end %>
</div>

<script type="text/javascript" charset="utf - 8">
    jQuery(document).ready(function () {
        $(".decrease").click(function () {
            var value = Number($('input[type=number]').val());
            value -= 50;
            $('input[type=number]').val(value);
        });
        $(".increase").click(function () {
            var value = Number($('input[type=number]').val());
            value += 50;
            $('input[type=number]').val(value);
        });
    });
</script>
