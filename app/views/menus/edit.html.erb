<h3><%= flash[:alert] %></h3>

<%= form_for @menu do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :menu_name%>
  </div>

  <div class="field">
    <%= form.label :Price %>
    <%= form.number_field :price, id: :menu_price%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

  <div class="destroy">
    <%= link_to "削除", menu_path(@menu.id), method: :delete %>
  </div>
<% end %>
