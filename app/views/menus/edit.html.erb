<div class="menu-form">
  <% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>"><%= message %></div>
  <% end %>

  <%= form_for @menu, html: {class: "form-horizontal"} do |form| %>
    <% if @menu.image.attached? %>
      <div class="form-group">
        <%= image_tag @menu.image.variant(resize: "300x300"), class: "img-circle" %>
      </div>
    <% end %>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= form.file_field :image, class: "filestyle", "data-buttonText": "ファイル選択" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label "商品名", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :name, id: :menu_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label "値段(円)", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.number_field :price, id: :menu_price, class: "form-control" %>
      </div>
    </div>

    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit "メニューを編集", class: "btn btn-primary" %>
      <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#deleteModal">
      削除
      </button>
    </div>

    <!-- モーダルダイアログ -->
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="modal" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="demoModalTitle">本当にこのメニューを削除しますか？</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">キャンセル</button>
            <%= link_to "削除", menu_path(@menu.id), method: :delete, class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>

  <% end %>
</div>
