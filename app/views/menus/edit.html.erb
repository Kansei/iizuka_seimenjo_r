

<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>

<%= form_for @menu, html:{class: "form-horizontal" } do |form| %>
  <% if @menu.image.attached? %>
    <div class="form-group">
      <%= image_tag @menu.image.variant(resize: "300x300"), class: "img-circle"%>
    </div>
  <% end %>

  <div class="form-group">
    <%#= form.label "写真", class: "col-sm-2 control-label" %>
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.file_field :image, class: "filestyle", "data-buttonText": "ファイル選択" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label "商品名", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_field :name, id: :menu_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label "値段(円)", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.number_field :price, id: :menu_price, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit "メニューを編集", class: "btn btn-primary" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= link_to "削除", menu_path(@menu.id), method: :delete, class: "btn btn-danger"%>
    </div>
  </div>
<% end %>
